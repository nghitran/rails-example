<%= form_for @article, html: {class: "form-horizontal"} do |f| %>
  <% if @article.errors.any? %>
    <ul>
      <% @article.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>
  <div class="form-group">
    <%= f.label :title, 'Title', class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :title, class: 'form-control', placeholder: 'Email' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :content, 'Content', class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_area :content, class: 'form-control', placeholder: 'Content' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-10 col-sm-offset-2">
      <%= f.submit "Save article", class: 'btn btn-default' %>
    </div>
  </div>
<% end %>
